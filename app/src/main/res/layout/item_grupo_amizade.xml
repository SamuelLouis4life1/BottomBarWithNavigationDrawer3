<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="5dp"
    android:id="@+id/grupo_item_id">

    <ImageView
        android:id="@+id/img_contact_grupo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/we_gossip"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">
        <TextView
            android:id="@+id/name_contact_grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Contato"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/phone_contact_grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de phone"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:src="@drawable/ic_sugestao_amizade_24dp" />

    </LinearLayout>

</LinearLayout>