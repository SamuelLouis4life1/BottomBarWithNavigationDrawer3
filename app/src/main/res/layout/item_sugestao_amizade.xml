<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:id="@+id/sugestao_amizade_item_id">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_sugestao_amizade"
        app:cardBackgroundColor="@color/md_blue_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_contact_sugestao_amizade"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/we_gossip"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/name_contact_sugestao_amizade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Nome Contato"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/sobrenome_contact_sugestao_amizade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sobre Nome Contota"/>
                <TextView
                    android:id="@+id/data_aniversaio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data anivarsario"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="end">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_add_24dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>